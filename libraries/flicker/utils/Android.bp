package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

filegroup {
    name: "flickerlib-helpers-src",
    srcs: ["src/android/tools/**/helpers/*.kt"],
}

java_library {
    name: "flickerlib-helpers",
    platform_apis: true,
    optimize: {
        enabled: false
    },
    srcs: [
        ":flickerlib-helpers-src",
    ],
    static_libs: [
        "flickerlib-parsers",
        "flickerlib-trace_processor_shell",
        "androidx.test.uiautomator_uiautomator",
    ],
}

java_library {
    name: "flickerlib-parsers",
    platform_apis: true,
    kotlincflags: [
        "-Xmulti-platform",
        "-opt-in=kotlin.ExperimentalMultiplatform",
    ],
    optimize: {
        enabled: false
    },
    srcs: [
        "src/android/tools/**/*.kt",
    ],
    exclude_srcs: [
        ":flickerlib-helpers-src",    
    ],
    static_libs: [
        "androidx.benchmark_benchmark-macro",
        "perfetto_config-lite",
        "platformprotosnano",
        "view_capture_proto",
        "WindowManager-Shell-proto",
    ],
}